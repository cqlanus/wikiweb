{
  "manifest_version": 2,
  "name": "Wiki Web",
  "description": "This extension shows collects and displays wikipedia history",
  "version": "1.0.0",

  "icons": { 
    "128": "rainbow.png"
  },

  "page_action" : {
    "default_title": "Wiki Web - default title",
    "default_icon" : "rainbow.png",
    "default_popup": "popup.html"
  },


  "permissions": [
    "activeTab",
    "tabs",
  ],

  "background": {                // two types: persistent, event
    "scripts" : ["./jquery-3.2.1.min.js", "./background.js"],
    "persistent" : false          //  if false then you are using event pages
  },

  "content_scripts": [            // asscess dom, executed on refresh
    {
        "matches": ["https://en.wikipedia.org/wiki/*"],
        "js": ["./jquery-3.2.1.min.js", "./content.js"]
    }]
  }


