{
  "manifest_version": 2,
  "name": "Wiki Web",
  "description": "This extension shows collects and displays wikipedia history",
  "version": "1.0.0",

  "icons": {
    "128": "assets/rainbow.png"
  },

  "page_action" : {
    "default_title": "Wiki Web - default title",
    "default_icon" : "assets/rainbow.png",
    "default_popup": "views/popup.html"
  },


  "permissions": [
    "http://*/",
    "https://d3js.org/d3.v4.min.js",
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/"
  ],

  "background": {
    "scripts" : ["js/jquery-3.2.1.min.js", "js/d3.min.js", "js/background.js"],
    "persistent" : false
  },

  "content_scripts": [
    {
        "matches": ["https://en.wikipedia.org/wiki/*"],
        "js": ["js/content.js"]
    }]
  }

